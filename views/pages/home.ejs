
<div class="content-wrapper">

  <div class="container mt-3">
    <h1>Welcome to the products dashbored</h1>

    <div class="row">
      <div class="col-5 pr-3">
        <canvas id="myPieChart" width="200" height="100"></canvas>
      </div>

      <div class="col-5 pr-3">
        <canvas id="myBarChart" width="400" height="400"></canvas>
      </div>

    </div>

  </div>
</div>

<script>
  const ctx = document.getElementById('myPieChart').getContext('2d');

  // Random e-commerce statistics data
  const data = {
      labels: [
          'Electronics',
          'Fashion',
          'Home & Kitchen',
          'Books',
          'Sports'
      ],
      datasets: [{
          label: 'E-commerce Sales',
          data: [300, 150, 100, 200, 250], // Random numbers for illustration
          backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)'
          ],
          borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)'
          ],
          borderWidth: 1
      }]
  };

  // Configuring the pie chart
  const config = {
      type: 'pie',
      data: data,
      options: {
          responsive: true,
          plugins: {
              legend: {
                  position: 'top',
              },
              title: {
                  display: true,
                  text: 'E-commerce Sales Distribution'
              }
          }
      },
  };

  // Creating the pie chart
  const myPieChart = new Chart(ctx, config);

  const ctx1 = document.getElementById('myBarChart').getContext('2d');

    // Random e-commerce statistics data for various product categories
    const labels = ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'];
    const dataInStock = [50, 100, 80, 30, 60]; // Products in stock
    const dataOutOfStock = [10, 5, 15, 20, 10]; // Products out of stock
    const dataMostPurchased = [70, 110, 90, 40, 80]; // Most purchased products this month
    const dataNotSellingWell = [5, 3, 8, 7, 6]; // Products not selling well this month

    // Configuring the bar chart
    const config1 = {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'In Stock',
                    data: dataInStock,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                },
                {
                    label: 'Out of Stock',
                    data: dataOutOfStock,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                },
                {
                    label: 'Most Purchased',
                    data: dataMostPurchased,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                },
                {
                    label: 'Not Selling Well',
                    data: dataNotSellingWell,
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    borderColor: 'rgba(255, 206, 86, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Product Stock and Sales Statistics'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    // Creating the bar chart
    const myBarChart = new Chart(ctx1, config1);

</script>
